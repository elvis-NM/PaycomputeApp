@model EmployeeCreateViewModel




    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class=" =" breadcrumb>
                        <li class="breadcrumb-Item"><a asp-controller="home" asp-action="Index">Home</a>New Employee</li>
                        <li class="breadcrumb-Item"><a asp-action="Index">Employee List</a></li>
                        <li class="breadcrumb-Item active" arial-current="page">New Employee</li>
                    </ol>
                </nav><br /><br />
            <form method="post" enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="EmployeeNo"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="EmployeeNo" class="form-control" />
                        <span asp-validation-for="EmployeeNo" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="DateJoined"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DateJoined" class="form-control" placeholder="EMP000" />
                        <span asp-validation-for="DateJoined" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="MiddleName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="MiddleName" class="form-control" placeholder="Enter Middle Name" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-check col-md-2">
                        <label asp-for="Gender"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select clss="form-control" asp-for="Gender">
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">

                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="DOB"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="SocialSecurityNo "></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="SocialSecurityNo" class="form-control" placeholder="Enter SSN" />
                        <span asp-validation-for="SocialSecurityNo" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Phone"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Phone" class="form-control" placeholder="Enter Phone number" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">

                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="PaymentMethod"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="PaymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<Paycompute.Entity.PaymentMethod>()"></select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="StudentLoan"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="StudentLoan" class="form-control" asp-items="Html.GetEnumSelectList<Paycompute.Entity.StudentLoan>()"></select>
                        <span asp-validation-for="StudentLoan" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-2">

                    </div>

                    <div class="form-group col-md-2">
                        <label asp-for="UnionMember"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="UnionMember" class="form-control" asp-items="Html.GetEnumSelectList<Paycompute.Entity.UnionMember>() "></select>
                        <span asp-validation-for="DateJoined" class="text-danger"></span>
                    </div>
                </div>
                    <div class="form-row">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label asp-for="Designation"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="Designation" class="form-control" placeholder="Enter Role..." />
                            <span asp-validation-for="Designation" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">

                        </div>
                        <div class="form-group col-md-1">
                            <label asp-for="ImageUrl"></label>
                        </div>

                        <div class="form-group col-md-4">
                            <div class="btn btn-primary btn-icon-text">
                                <i class="fas fa-upload"></i>
                                <input asp-for="ImageUrl" type="file" value="Upload" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter Address.." />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="City"></label>
                        <input asp-for="City" class="form-control" placeholder="Enter City/Town..." />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label asp-for="Zipcode"></label>
                        <input asp-for="Zipcode" class="form-control" placeholder="Enter Zipcode..." />
                        <span asp-validation-for="Zipcode" class="text-danger"></span>
                    </div>
                    <div class="form-group ">

                        <button type="submit" class="btn-group-lg btn-rounded btn-primary float-left"><i class="fas fa-save" style="Margin-right:0.7em "></i>Save</button>
                        <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-backward" style="Margin-right:0.7em"> Back</i></a>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
            </form>
            </div>
        </div>
    </div>
@section Scripts{ 
    @{ await Html.RenderPartialAsync("");}

}
